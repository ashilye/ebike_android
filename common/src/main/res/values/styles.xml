<resources>
    <!-- Base application theme. -->
    <style name="CommonAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/common_colorPrimary</item>
        <item name="colorPrimaryDark">@color/common_colorPrimaryDark</item>
        <item name="colorAccent">@color/common_colorAccent</item>
    </style>

    <style name="CommonNoTitleBarTheme" parent="CommonAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CommonSplashTheme" parent="CommonNoTitleBarTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/layer_splash_bg</item>
    </style>

    <style name="CommonFullscreenTheme" parent="CommonNoTitleBarTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="CommonDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_trans</item>
    </style>

    <style name="CommonDialogBottomStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/CommonDialogBottomAnim</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_trans</item>
    </style>

    <style name="CommonDialogBottomAnim" parent="android:Animation" mce_bogus="1" >
        <item name="android:windowEnterAnimation">@anim/anim_dialog_up</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_down</item>
    </style>
</resources>